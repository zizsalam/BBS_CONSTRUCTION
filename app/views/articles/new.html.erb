<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">New Article</h1>

    <%= form_with(model: @article, local: true, class: "space-y-6") do |form| %>
      <% if @article.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <h2 class="text-red-800 font-semibold"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @article.errors.full_messages.each do |message| %>
              <li class="text-red-700"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :body, rows: 10, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

       <div>
    <%= form.label :image, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.file_field :image, class: "mt-1 block w-full text-sm text-gray-500
      file:mr-4 file:py-2 file:px-4
      file:rounded-md file:border-0
      file:text-sm file:font-semibold
      file:bg-indigo-50 file:text-indigo-700
      hover:file:bg-indigo-100" %>
  </div>

      <div class="flex justify-end">
        <%= form.submit "Create Article", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <%= link_to 'Back to Articles', articles_path, class: "mt-4 inline-block text-indigo-600 hover:text-indigo-800" %>
  </div>
</div>
