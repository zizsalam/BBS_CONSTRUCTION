<!-- app/views/articles/_form.html.erb -->
<%= form_with(model: article, local: true, html: { multipart: true }) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul class="list-disc list-inside">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: 'tinymce shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="mb-4">
    <%= form.label :image, "Upload Image", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.file_field :image, accept: 'image/*', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :image_url, "Or Image URL", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.url_field :image_url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>

  <div class="actions">
    <%= form.submit article.new_record? ? 'Create Article' : 'Update Article', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>

<%= tinymce %>
